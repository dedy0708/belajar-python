#membuat sytax input nilai
jam_awal = int(input(  "Masukkan Waktu (Jam)          = "))
menit_awal = int(input("Masukkan Waktu (Menit)        = "))
durasi = int(input(    "Masukkan Durasi waktu (Menit) = "))

#mengonversi waktu kedalam detik
jam_ke_detik = (jam_awal*3600)+(menit_awal*60)
durasi_akhir = (durasi*60)
total_akhir = jam_ke_detik+durasi_akhir

#mengonversi jam dan menit
jam = total_akhir//3600
sisa= total_akhir%3600
menit=sisa//60

#membuat kondisi jika waktu melebihi 24.00
if(jam > 24 and menit < 0):
  jam = jam - 24
else:
  jam = jam
print()
print("Total Waktu akhir saat ini adalah pada jam %d:%d " % (jam, menit))
